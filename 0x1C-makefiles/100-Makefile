CC = gcc
SRC = main.c file1.c file2.c
OBJ = main.o file1.o file2.o
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ)

clean:
	-$(RM) $(NAME) *~ *.o

oclean:
	-$(RM) *.o

fclean: clean
	-$(RM) $(NAME)

re: fclean all

$(OBJ): $(SRC)
	$(CC) $(CFLAGS) -c $(SRC)

$(NAME): m.h

