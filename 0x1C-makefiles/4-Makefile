CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm -f
NAME = school
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)

.PHONY: all clean fclean oclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ)

clean:
	$(RM) $(NAME) *~ 

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
